<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/titlebar_iv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_ui_margin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_tv_left"
        style="@style/textStyle16White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/titlebar_iv_left"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_ui_margin_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_tv"
        style="@style/textStyle20White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="224dp" />

    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/titlebar_tv_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_tv_right"
        style="@style/textStyle16White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_ui_margin_small"
        android:paddingRight="@dimen/default_ui_margin_medium"
        android:visibility="gone" />
    <TextView
        android:id="@+id/titlebar_clear"
        style="@style/textStyle16White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_ui_margin_small"
        android:paddingRight="@dimen/default_ui_margin_medium"
        android:visibility="gone" />
    <TextView
        android:id="@+id/titlebar_confirm"
        style="@style/textStyle16White"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_ui_margin_small"
        android:paddingRight="@dimen/default_ui_margin_medium"
        android:visibility="gone" />
</RelativeLayout>